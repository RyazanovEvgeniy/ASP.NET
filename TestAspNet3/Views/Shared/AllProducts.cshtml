@model Product

<div class="col-lg-4">
    <h2>Модель: @Model.name</h2>
    <img class="img-thumbnail" src="@Model.img" alt="@Model.name" />
    <p>@Model.shortDescription</p>
    <p>Цена: @Model.price.ToString("c")</p>
    <p><a class="btn btn-warning" asp-controller="Cart" 
          asp-action="addToCart" asp-route-id="@Model.id">Добавить в корзину</a></p>
</div>